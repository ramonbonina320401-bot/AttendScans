rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // System settings - public read for instructor access key validation
    match /settings/system {
      allow read: if true;  // Anyone can read (needed for signup validation)
      allow write: if false; // No one can write (admin only through console)
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      // TEMPORARY: Allow any authenticated user to create during signup testing
      allow create: if request.auth != null;
      // Allow users to update only their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      // Only allow deletion by the user themselves
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Attendance records
    match /attendance/{recordId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.studentId;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.instructorId || request.auth.uid == resource.data.studentId);
    }
    
    // Active sessions (QR codes)
    match /activeSessions/{sessionId} {
      allow read: if request.auth != null;
      // Only instructors can create, update, or delete sessions
      allow create, update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'instructor';
    }
    
    // Instructor courses
    match /instructorCourses/{instructorId} {
      allow read, write: if request.auth != null && request.auth.uid == instructorId;
    }
    
    // Registered students (instructor's student list)
    match /registeredStudents/{studentId} {
      // Allow authenticated users to read (students need to query by displayStudentId for attendance)
      allow read: if request.auth != null;
      // Instructors can create/update/delete their own students
      allow create: if request.auth != null && request.resource.data.instructorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.instructorId == request.auth.uid;
    }
    
    // User-specific settings (late threshold, personal preferences, etc.)
    match /settings/{userId} {
      allow read: if request.auth != null; // Any authenticated user can read (students need late threshold)
      allow write: if request.auth != null && request.auth.uid == userId; // Only owner can write
    }
  }
}
